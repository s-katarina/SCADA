<Window x:Class="DatabaseManager2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatabaseManager2"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Margin="15" x:Name="tagBtn" Content="Analog Tag managment" Click="tagBtn_Click"></Button>
            <Button Margin="15" x:Name="digitalBtn" Content="Digital Tag managment" Click="digitalBtn_Click"></Button>
            <Button Margin="15" x:Name="registerBtn" Content="Register"></Button>
        </StackPanel>

        <ScrollViewer MaxHeight="800" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Frame x:Name="MainFrame" Margin="10, 10">
                </Frame>
            </Grid>
        </ScrollViewer>

    </StackPanel>
</Window>
